<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControladorLogin</servlet-name>
        <servlet-class>Servlets.ControladorLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorTecnico</servlet-name>
        <servlet-class>Servlets.ControladorTecnico</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorAdministrador</servlet-name>
        <servlet-class>Servlets.ControladorAdministrador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorDispositivo</servlet-name>
        <servlet-class>Servlets.ControladorDispositivo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorInstalaciones</servlet-name>
        <servlet-class>Servlets.ControladorInstalaciones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorRecibos</servlet-name>
        <servlet-class>Servlets.ControladorRecibos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorTecnico</servlet-name>
        <url-pattern>/tecnicos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorAdministrador</servlet-name>
        <url-pattern>/administrador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorDispositivo</servlet-name>
        <url-pattern>/dispositivos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorInstalaciones</servlet-name>
        <url-pattern>/instalaciones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorRecibos</servlet-name>
        <url-pattern>/recibos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
</web-app>
